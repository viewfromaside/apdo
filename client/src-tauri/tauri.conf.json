{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "apdo",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "apdo",
        "width": 1024,
        "height": 600,
        "resizable": false,
        "fullscreen": false,

        "additionalBrowserArgs": "--disable-backgrounding-occluded-windows --disable-renderer-backgrounding",
        "skipTaskbar": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
